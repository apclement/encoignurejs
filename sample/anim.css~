
/* animations */
.translate-l.in {
  -webkit-animation-name: translate-left-in;
	-webkit-animation-duration: .3s;	
}

.translate-l.out {
  -webkit-animation-name: translate-left-out;
	-webkit-animation-duration: .3s;	
}

.translate-r.in { 
  -webkit-animation-name: translate-right-in;
	-webkit-animation-duration: .3s;	
}

.translate-r.out { 
  -webkit-animation-name: translate-right-out;
	-webkit-animation-duration: .3s;	
}

.csstransforms3d .flip.in {
	-webkit-animation-name: flipin;
	-webkit-animation-duration: .3s;
	-webkit-backface-visibility: hidden;
}

.csstransforms3d .flip.out {
	-webkit-animation-name: flipout;
	-webkit-animation-duration: .3s;
	-webkit-backface-visibility: hidden;	
}

.csstransforms3d .flip-r.in {
	-webkit-animation-name: flip-right-in;
	-webkit-animation-duration: .3s;
	-webkit-backface-visibility: hidden;
}

.csstransforms3d .flip-r.out {
	-webkit-animation-name: flip-right-out;
	-webkit-animation-duration: .3s;
	-webkit-backface-visibility: hidden;	
}

.fade.in {
   opacity: 1;
	-webkit-transition-duration: 1s;	
}

.fade.out {
	opacity: 0;
	-webkit-transition-duration: 1s;
}

.in, .out {
	-webkit-animation-timing-function: ease-in-out;
}

.in {
 
}

.out {
   visibility: hidden;
}

.view {
  position: absolute; 
  width: 100%;
  margin: 0;
  height: 100%;
  -webkit-transition-property: visibility;
  -webkit-transition-duration: 1s;
  overflow: auto;
  overflow-x: hidden;
}

.csstransforms3d .views {
  -webkit-perspective: 1000;
}

@-webkit-keyframes flipin {
   from { -webkit-transform: rotateY(180deg) scale(.7); }
   to { -webkit-transform: rotateY(0); }
}

@-webkit-keyframes flipout {
   from { -webkit-transform: rotateY(0); }
   to { -webkit-transform: rotateY(-180deg) scale(.7);}
}

@-webkit-keyframes flip-right-in {
   from { -webkit-transform: rotateY(-180deg); }
   to { -webkit-transform: rotateY(0); }
}

@-webkit-keyframes flip-right-out {
   from { -webkit-transform: rotateY(0); }
   to { -webkit-transform: rotateY(180deg);}
}

@-webkit-keyframes translate-left-in {
   from { -webkit-transform: translate(100%); }
   to { -webkit-transform: translate(0); }
}

@-webkit-keyframes translate-left-out {
   from { -webkit-transform: translate(0); }
   to { -webkit-transform: translate(-100%); }
}

@-webkit-keyframes translate-right-in {
   from { -webkit-transform: translate(-100%); }
   to { -webkit-transform: translate(0); }
}

@-webkit-keyframes translate-right-out {
   from { -webkit-transform: translate(0); }
   to { -webkit-transform: translate(100%); }
}
